@page
@model WorkoutAppWeb.Pages.Workouts.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="text-primary pl-3">Add Workout</div>
            <hr />
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="@Model.Workout.name"></label>
                <input asp-for="@Model.Workout.name" class="form-control" />
                <span asp-validation-for="Workout.name" class="text-danger"></span>
            </div>
            <div class="mb-3">
               <label asp-for="@Model.Workout.repCount"></label>
               <input asp-for="@Model.Workout.repCount" class="form-control" />
               <span asp-validation-for="Workout.repCount" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Add
    </div>
</form>