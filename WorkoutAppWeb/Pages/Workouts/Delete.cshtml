@page
@model WorkoutAppWeb.Pages.Workouts.DeleteModel

<form method="post">
    <input hidden asp-for="Workout.id"></input>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="text-primary pl-3">Delete Workout</div>
            <hr />
            <div class="mb-3">
                <label asp-for="Workout.name"></label>
                <input asp-for="Workout.name" class="form-control" disabled="True" />
            </div>
            <div class="mb-3">
               <label asp-for="Workout.repCount"></label>
               <input asp-for="Workout.repCount" class="form-control" disabled="True" />
            </div>
        </div>
       <button type="submit" class="btn btn-danger" style="width:150px;" onclick="return confirm('Are you sure you want to delete this?')">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}